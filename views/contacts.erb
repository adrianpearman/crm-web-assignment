<h2 class="contact_info">
  Contact Information
</h2>
<ul>
<% Contact.all.each do |contact| %>
  <li class="contact_details">
  <%= contact.first_name %>
  <%= contact.last_name %>
  (<%= contact.email %>)
  <p class="contact_editor"><a href="#">Edit</a> | <a href="#">Delete</a></p>
</li>
<% end %>
</ul>

<h2>
  Notes
</h2>
<ul>
  <% Contact.all.each do |contact| %>
  <li>
    <%= contact.note  %>
  </li>
  <% end %>
</ul>

